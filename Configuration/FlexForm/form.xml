<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexforms_tab.general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.verification.recipients>
                        <section>1</section>
                        <type>array</type>
                        <title>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.verification.recipients</title>
                        <el>
                            <container>
                                <title>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.verification.recipient</title>
                                <type>array</type>
                                <el>
                                    <address>
                                        <TCEforms>
                                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.auditor.emailaddress</label>
                                            <config>
                                                <type>input</type>
                                                <size>40</size>
                                                <eval>trim,email,required</eval>
                                            </config>
                                        </TCEforms>
                                    </address>
                                    <name>
                                        <TCEforms>
                                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.auditor.name</label>
                                            <config>
                                                <type>input</type>
                                                <size>40</size>
                                                <eval>trim,required</eval>
                                            </config>
                                        </TCEforms>
                                    </name>
                                </el>
                            </container>
                        </el>
                    </settings.verification.recipients>
                    <settings.verification.email.subject>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.emailSubject</label>
                            <config>
                                <type>input</type>
                                <size>40</size>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.verification.email.subject>
                    <settings.verification.email.senderName>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.verification.email.senderName</label>
                            <config>
                                <type>input</type>
                                <size>40</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.verification.email.senderName>
                    <settings.verification.email.senderEmailAddress>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.verification.email.senderEmailAddress</label>
                            <config>
                                <type>input</type>
                                <size>40</size>
                                <eval>trim,email</eval>
                            </config>
                        </TCEforms>
                    </settings.verification.email.senderEmailAddress>
                    <settings.automaticApproval>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.automaticApproval</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.automaticApproval>
                    <persistence.storagePid>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.storagePid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </persistence.storagePid>
                    <settings.storageFolder>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.storageFolder</label>
                            <config>
                                <type>group</type>
                                <internal_type>folder</internal_type>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </settings.storageFolder>
                </el>
            </ROOT>
        </sDEF>

        <fields>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexforms_tab.fields</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>


                    <settings.fields.message.maxCharacters>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.fields.message.maxCharacters</label>
                            <config>
                                <type>input</type>
                                <eval>int</eval>
                                <min>100</min>
                                <max>65535</max>
                                <default>2000</default>
                            </config>
                        </TCEforms>
                    </settings.fields.message.maxCharacters>
                    <settings.fields.message.minCharacters>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.fields.message.minCharacters</label>
                            <config>
                                <type>input</type>
                                <eval>int</eval>
                                <min>0</min>
                                <max>65535</max>
                                <default>50</default>
                            </config>
                        </TCEforms>
                    </settings.fields.message.minCharacters>
                    <settings.fields.images.maxUploadFileSize>
                        <TCEforms>
                            <label>LLL:EXT:ws_bulletinboard/Resources/Private/Language/locallang_db.xlf:flexform.fields.images.maxUploadFileSize</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.fields.images.maxUploadFileSize>
                </el>
            </ROOT>
        </fields>
    </sheets>
</T3DataStructure>
